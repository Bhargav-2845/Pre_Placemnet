block = int(input("Enter the number of blocks: "))
lines = int(input("Enter the number of lines: "))
stars = int(input("Enter the number of stars: "))

c = 0
for i in range(block):
    c = 0
    for j in range(lines - i):
        for k in range(stars):
            print("*" ,end =' ')
            c = c+1
        print()
    print("Total stars: ",c)
    print("-----------------")
